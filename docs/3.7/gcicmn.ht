/* Note: In GemStone versions earlier than 5.1, the DateTime struct had only
 * three fields; in 5.1, timeZone has been added. timeZone represents
 * the time zone of the region in which the DateTime was created/is being
 * created. If the timeZone field is OOP_NIL, GemStone replaces it with
 * the session's current time zone. (Each session can have a different time
 * zone).
 *
 * In 5.1, time is represented in millisecond granularity; in the earlier
 * versions, it was second granularity.
 */
class CLS_EXPORT GciDateTimeSType {
  /* C representation in GMT of instance of class DateTime */
 public:
   int year;         /* 1901 <= year <= 1000000. Value is the actual year */
   int dayOfYear;    /* 1..366 (366 used for a leap year) */
   int milliseconds; /* since midnight */
   OopType timeZone;  /* oop of the time zone */

   GciDateTimeSType() {
     year = 1901;
     dayOfYear = 1;
     milliseconds = 0;
     timeZone = OOP_NIL;
   }
};

class CLS_EXPORT GciDateAndTime {
  // C Representation of instance of DateAndTime
 public:
    // dayOfYear == -1   microSeconds are posix time , year not used
    // dayOfYear >= 1,  microSeconds is from start of day
  int64 microSeconds;  // posixMicroseconds if year==-1
  int offsetSeconds;
  int year;      // Gregorian year per DateAndTime
  int dayOfYear;    /* 1..366 (366 used for a leap year) */

  GciDateAndTime() { initialize(); }

  void initialize() {
    year = 2001;
    dayOfYear = 1;
    microSeconds = 0;
    offsetSeconds = 0;
  }
};

class CLS_EXPORT GciPosixDateAndTime {
  // C Representation of instance of DateAndTime
 public:
  int64 microseconds;  // UTC since 1970
  int offset;

  GciPosixDateAndTime() {
    microseconds = 0;
    offset = 0;
  }
};

