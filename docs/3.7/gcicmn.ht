/* =============================================================================
 * GCI_OOP_IS_SMALL_INT macro
 *   Determine whether or not a GemStone object represents a SmallInteger.
 *
 * Arguments:
 *   (1) The OOP of the object to test.
 *
 * Result value:
 *   A C Boolean value.  Returns TRUE if the object represents a SmallInteger,
 *   FALSE otherwise.
 *==============================================================================
 */
#define GCI_OOP_IS_SMALL_INT(oop) (((uintptr_t)(oop) & OOP_RAM_TAG_MASK) == OOP_TAG_SMALLINT)

#define GCI_OOP_IS_SMALL_FRACTION(o) (\
  ((OopType)o & OOP_SPECIAL_CLASS_MASK)  == (OOP_SPECIAL_SmallFractionCLASS_FIELD | OOP_TAG_SPECIAL) )

#define GCI_OOP_IS_SmallScaledDecimal(o) (\
  ((OopType)o & OOP_SPECIAL_CLASS_MASK)  == (OOP_SPECIAL_SmallScaledDecimalCLASS_FIELD | OOP_TAG_SPECIAL) )

#define GCI_OOP_IS_SmallDate(o) (\
  ((OopType)o & OOP_SPECIAL_CLASS_MASK)  == (OOP_SPECIAL_SmallDateCLASS_FIELD | OOP_TAG_SPECIAL) )

#define GCI_OOP_IS_SmallTime(o) (\
  ((OopType)o & OOP_SPECIAL_CLASS_MASK)  == (OOP_SPECIAL_SmallTimeCLASS_FIELD | OOP_TAG_SPECIAL) )

#define GCI_OOP_IS_SmallDateAndTime(o) (\
  ((OopType)o & OOP_SPECIAL_CLASS_MASK)  == (OOP_SPECIAL_SmallDateAndTimeCLASS_FIELD | OOP_TAG_SPECIAL) )

#define GCI_OOP_IS_SMALL_DOUBLE(oop) \
   ( (((OopType)oop) & OOP_RAM_TAG_MASK) == OOP_TAG_SMALLDOUBLE )

static inline double GCI_OOP_TO_SMALL_DOUBLE(OopType arg)
{
  // caller must check that GCI_OOP_IS_SMALL_DOUBLE(arg) != 0
  uint64 e_f_bits = arg >> (OOP_NUM_TAG_BITS + 1) ;
  uint64 sign = arg & 0x8;
  uint64 result = 0;
  if (e_f_bits == 0) {
    // result will be  0.0 or -0.0
  } else {
    uint64 expBits = arg >> 56 ;
    result =  (arg << 8) >> 12 ; // isolate f bits
    GCI_ASSERT(result != 0 || expBits != 0); // e or f bits must be non-zero
    expBits = expBits + SMALL_DOUBLE_EXPONENT_BASE ;
    result |= (expBits << 52);
  }
  result |= sign << 60 ;
  return *((double*)&result);
}


/* =============================================================================
 * GCI_OOP_IS_BOOL macro
 *   Determine whether or not a GemStone object represents a Boolean value.
 *
 * Arguments:
 *   (1) The OOP of the object to test.
 *
 * Result value:
 *   A C Boolean value.  Returns TRUE if the object represents a Boolean, FALSE
 *   otherwise.
 *==============================================================================
 */
enum { OOP_IS_BOOL_MASK = 0xFF };
#define GCI_OOP_IS_BOOL(oop) ( ((uintptr_t)(oop) & OOP_IS_BOOL_MASK) == OOP_FALSE )


static inline BoolType GCI_I64_IS_SMALL_INT(int64 arg)
{
  // Return TRUE if argument is within SmallInteger range .
  // A SmallInteger has a 61 bit 2-s complement integer and 3 tag bits.
  // For a positive int64 argument,
  //  top 4 bits must be 2r0000 for argument to be within SmallInteger range.
  // For a negative int64 argument,
  //  top 4 bits must be 2r1111 for argument to be within SmallInteger range.

  // This algorithm avoids loading large constants (expensive on RISC machines)
  // and does only one compare .
  int shiftCount = 64 - (OOP_NUM_TAG_BITS + 1) ;
  int64 top4 = arg >> shiftCount;
  int64 sign4 = (top4 & 0xF0) >> 4;    // sign4 is either 0 or 0xF
  return (top4 & 0xF) == sign4;
}

// ==================================================================
//  It was thought the following 3 would be an optimization on machines
//  where loading a large constant can be expensive, but some compilers
//  ignored these and did their own 3-instruction sequence after
//  computing constants at compile time...
//  So  GCI_int64_MAX generates same code as using LONG_MAX directly.

static inline int64 GCI_int64_MAX()
{
  // function result is 64bit LONG_MAX
  uint64 val = 0;
  val = ( ~ val) >> 1;
  return (int64)val ;
}

static inline uint64 GCI_uint64_MAX()
{
  // function result is 64bit ULONG_MAX
  uint64 val = 0;
  val =  ~ val ;
  return val ;
}

static inline int64 GCI_int64_MIN()
{
  // function result is 64bit LONG_MIN
  uint64 val = 1;
  val = val << 63;
  return (int64)val ;
}

