{
	"name": "gemstone",
	"displayName": "GemStone IDE",
	"description": "GemStone/S IDE for Visual Studio Code",
	"version": "0.2.3",
	"preview": true,
	"publisher": "jgfoster",
	"license": "MIT",
	"engines": {
		"vscode": "^1.49.0"
	},
	"categories": [
		"Debuggers",
		"Programming Languages"
	],
	"keywords": [
		"GemStone",
		"Smalltalk",
		"Database",
		"Object Database",
		"IDE"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "gemstone.displayIt",
				"title": "Display It"
			},
			{
				"command": "gemstone.login",
				"title": "Login"
			},
			{
				"command": "gemstone.selectNamespace",
				"title": "Select Namespace"
			},
			{
				"command": "gemstone.fetchMethods",
				"title": "Fetch Methods"
			},
			{
				"command": "gemstone.openDocument",
				"title": "Open Document"
			},
			{
				"command": "gemstone.logout",
				"title": "Logout"
			}
		],
		"configuration": {
			"type": "object",
			"title": "GemStone",
			"properties": {
				"gemstone.logins": {
					"type": "array",
					"items": {
						"type": "object",
						"title": "Login Parameters",
						"properties": {
							"label": {
								"type": "string",
								"description": "A label for this login"
							},
							"version": {
								"type": "string",
								"description": "GemStone/S 64 Bit version"
							},
							"gem_host": {
								"type": "string",
								"description": "Hostname or IP address of gem server (NetLDI)"
							},
							"stone": {
								"type": "string",
								"description": "Stone name"
							},
							"gs_user": {
								"type": "string",
								"description": "GemStone user name"
							},
							"gs_password": {
								"type": "string",
								"description": "GemStone password"
							},
							"netldi": {
								"type": "string",
								"description": "Service name or port number"
							},
							"host_user": {
								"type": "string",
								"description": "Host OS user name (if NetLDI not in guest mode)"
							},
							"host_password": {
								"type": "string",
								"description": "Host OS password (if NetLDI not in guest mode)"
							}
						}
					},
					"default": [
						{
							"label": "Default",
							"version": "3.5.0",
							"gem_host": "localhost",
							"stone": "gs64stone",
							"gs_user": "DataCurator",
							"gs_password": "swordfish",
							"netldi": "gs64ldi",
							"host_user": "",
							"host_password": ""
						}
					],
					"description": "GemStone/S 64 Bit login parameters"
				}
			}
		},
		"keybindings": [
			{
				"command": "gemstone.displayIt",
				"key": "ctrl+d",
				"mac": "cmd+d",
				"when": "editorTextFocus"
			},
			{
				"command": "gemstone.displayClassFinder",
				"key": "ctrl+shift+f"
			}
		],
		"menus": {
			"view/item/context": [
				{
					"command": "gemstone.login",
					"when": "view == gemstone-logins",
					"group": "inline"
				},
				{
					"command": "gemstone.logout",
					"when": "view == gemstone-sessions",
					"group": "inline"
				}
			],
			"view/title": [
				{
					"command": "gemstone.selectNamespace",
					"when": "view == gemstone-classes",
					"group": "navigation"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "gemstone",
					"title": "GemStone/S Tools",
					"icon": "resources/sparkle32.png"
				}
			]
		},
		"views": {
			"gemstone": [
				{
					"id": "gemstone-logins",
					"name": "Logins"
				},
				{
					"id": "gemstone-sessions",
					"name": "Sessions"
				},
				{
					"id": "gemstone-classes",
					"name": "Classes"
				},
				{
					"id": "gemstone-methods",
					"name": "Methods"
				}
			]
		}
	},
	"activationEvents": [
		"onView:gemstone-logins",
		"onFileSystem:gs1",
		"onFileSystem:gs2",
		"onFileSystem:gs3",
		"onFileSystem:gs4",
		"onFileSystem:gs5",
		"onFileSystem:gs6",
		"onFileSystem:gs7",
		"onFileSystem:gs8",
		"onFileSystem:gs9"
	],
	"dependencies": {
		"@types/request": "^2.48.8",
		"@types/tar": "^6.1.1",
		"fast-xml-parser": "^4.0.8",
		"fs": "0.0.1-security",
		"gci": "^1.1.1",
		"request": "^2.88.2",
		"tar": "^6.1.11"
	},
	"devDependencies": {
		"@types/vscode": "^1.67.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^8.0.0",
		"@types/node": "^17.0.41",
		"eslint": "^8.17.0",
		"@typescript-eslint/eslint-plugin": "^5.27.1",
		"@typescript-eslint/parser": "^5.27.1",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.3",
		"@vscode/test-electron": "^2.1.3",
		"ts-loader": "^9.3.0",
		"ts-webpack": "^1.0.0",
		"eslint": "^8.17.0",
		"webpack": "^5.73.0",
		"webpack-cli": "^4.9.2"
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"icon": "resources/sparkle128.png",
	"homepage": "https://github.com/jgfoster/vscode-gemstone",
	"repository": {
		"type": "git",
		"url": "https://github.com/jgfoster/vscode-gemstone.git"
	},
	"bugs": {
		"url": "https://github.com/jgfoster/vscode-gemstone/issues",
		"email": "vscode@jgfoster.net"
	}
}
