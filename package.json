{
  "name": "gemstone",
  "displayName": "GemStone IDE",
  "description": "GemStone/S IDE for Visual Studio Code",
  "version": "0.7.0",
  "preview": true,
  "publisher": "jgfoster",
  "license": "MIT",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Debuggers",
    "Programming Languages"
  ],
  "keywords": [
    "GemStone",
    "Smalltalk",
    "Database",
    "Object Database",
    "IDE"
  ],
  "activationEvents": [ ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      { "command": "gemstone.displayIt", "title": "GemStone Display It"  },
      { "command": "gemstone.login",     "title": "GemStone Login"       },
      { "command": "gemstone.logout",    "title": "GemStone Logout"      }
    ],
    "configuration": {
      "title":  "GemStone/S 64 Bit Login",
      "properties": {
        "gemstone.login.gemHost": {
            "type": "string",
            "default": "localhost",
            "description": "Hostname or IP address of gem server"
        },
        "gemstone.login.gemPort": {
          "type": "number",
          "default": 50378,
          "description": "Gem server port"
        },
        "gemstone.login.gemUser": {
          "type": "string",
          "default": "DataCurator",
          "description": "GemStone user name"
        },
        "gemstone.login.gemPassword": {
          "type": "string",
          "default": "swordfish",
          "description": "GemStone password"
        }
      }
    },
    "keybindings": [
      {
        "command": "gemstone.displayIt",
        "key": "ctrl+d",
        "mac": "cmd+d",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
		"vscode-languageclient": "^8.1.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.81.0",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  },
  "icon": "resources/sparkle128.png",
  "homepage": "https://github.com/jgfoster/vscode-gemstone",
  "repository": {
    "type": "git",
    "url": "https://github.com/jgfoster/vscode-gemstone.git"
  },
  "bugs": {
    "url": "https://github.com/jgfoster/vscode-gemstone/issues",
    "email": "vscode@jgfoster.net"
  }
}
