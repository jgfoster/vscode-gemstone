{
  "name": "gemstone-topaz",
  "displayName": "GemStone Smalltalk (Topaz)",
  "description": "Language support for GemStone's Topaz Files",
  "version": "1.0.1",
  "publisher": "gemtalksystems",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jgfoster/vscode_topaz"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./client/out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "gemstone-smalltalk",
        "aliases": [
          "GemStone Smalltalk",
          "Smalltalk"
        ],
        "extensions": [
          ".gs",
          ".st",
          ".tpz"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "gemstone-smalltalk",
        "scopeName": "source.gemstone-smalltalk",
        "path": "./syntaxes/gemstone-smalltalk.tmLanguage.json"
      }
    ]
  },
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "vscode:prepublish": "npm run bundle",
    "compile": "npm run compile:client && npm run compile:server",
    "compile:client": "tsc -p client/tsconfig.json",
    "compile:server": "tsc -p server/tsconfig.json",
    "bundle": "node esbuild.mjs",
    "watch": "tsc -b -w client/tsconfig.json server/tsconfig.json",
    "test": "npm run test:server",
    "test:server": "cd server && npx vitest run",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.3",
    "typescript": "^5.3.0"
  }
}
